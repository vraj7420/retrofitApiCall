<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8AC6C0DA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity">
 <androidx.cardview.widget.CardView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:cardCornerRadius="10dp"
     app:cardBackgroundColor="@android:color/transparent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
   <com.google.android.material.button.MaterialButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:id="@+id/btnSimpleApiFetching"
       app:layout_constraintEnd_toEndOf="parent"
       android:gravity="center"
       android:textAllCaps="false"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:textColor="@color/black"
       android:background="@drawable/ic_round_button"
       android:text="@string/simple_api_call_page_fetching"/>
   <com.google.android.material.button.MaterialButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       app:layout_constraintTop_toBottomOf="@id/btnSimpleApiFetching"
       app:layout_constraintStart_toStartOf="parent"
       android:id="@+id/btnApiFetchingUsingPaging"
       app:layout_constraintEnd_toEndOf="parent"
       android:textAllCaps="false"
       android:gravity="center"
       android:textColor="@color/black"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="10dp"
       android:background="@drawable/ic_round_button"
       android:text="@string/api_call_with_pagination"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
 </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>